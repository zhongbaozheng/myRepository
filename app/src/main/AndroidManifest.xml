<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.meiqu.lainmonitor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/AppTheme"
            android:name=".MainActivity"></activity>
        <activity android:name=".MainNewActivity"></activity>
        <activity
            android:name=".StartActivity"
            android:theme="@style/FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IpSettingActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".aui.ControlActivity"
            android:label="@string/title_activity_control">
        </activity>
        <activity android:name=".aui.power.elecMachine.ElecMachineManageActivity"/>
        <activity
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:name=".activity.UserManagerActivity"/>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme"
            android:name=".activity.DoorControlActivity"/>
        <activity
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme"
            android:name=".activity.SelectionActivity"/>
        <activity android:name=".activity.SettingActivity"/>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".hkvideo.SimpleActivity"/>
        <activity android:name=".hkvideo.OnlyLoginIdActivity"/>
        <activity android:name=".hkvideo.CameraMoveActivity"/>
        <activity android:name=".hkvideo.HKControlActivity"/>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".hkvideo.PlayBackActivity"/>
        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".hkvideo.CameraPlayActivity"/>

        <activity
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".hkvideo.CameraPBActivity"/>
    </application>

</manifest>