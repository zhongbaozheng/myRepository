<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_manager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:text="用户名"
            android:id="@+id/manager_name_tv"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <TextView

            android:textSize="11sp"
            android:gravity="center_vertical"
            android:text="卡号"
            android:id="@+id/manager_card_tv"
            android:layout_width="65dp"
            android:layout_height="wrap_content" />

        <TextView

            android:textSize="11sp"
            android:gravity="center"
            android:text="所属部门"
            android:id="@+id/manager_select_name_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:gravity="center"
            android:text="1、4"
            android:id="@+id/manager_applymod_tv"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="8sp"
            android:text="解除授权"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_layout"
            android:id="@+id/manager_change_mod_btn"
            android:layout_width="45dp"
            android:layout_height="30dp" />

        <Button
            android:textSize="8sp"
            android:text="更新"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_layout"
            android:id="@+id/manager_oprerate_update_btn"
            android:layout_width="35dp"
            android:layout_height="30dp" />
        <Button
            android:textSize="8sp"
            android:text="删除"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_layout"
            android:id="@+id/manager_delete_btn"
            android:layout_width="35dp"
            android:layout_height="30dp" />

    </LinearLayout>
</RelativeLayout>